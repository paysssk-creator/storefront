{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "noEmitOnError": false,


    "jsx": "preserve",
    "jsxImportSource": "vue",


    "noImplicitThis": false,
    "strict": true,




    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,


    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {

      "@core/*": ["core/*"],
      "@components/*": ["src/Components/*"],


      "@sdk-storefront/*": ["SDKs/storefront/*"],
      "@sdk-community/*": ["SDKs/community/*"],
      "@sdk-vendor/*": ["SDKs/vendor/*"],

      "@app-page-builder/*": ["src/Applications/PageBuilder/*"],
      "@app-vendor/*": ["src/Applications/Vendor/*"],
      "@app-storefront/*": ["*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],

    "downlevelIteration": true

  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "docs",
    "dist"
  ]

}
